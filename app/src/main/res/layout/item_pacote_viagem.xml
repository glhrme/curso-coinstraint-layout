<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/sao_paulo_sp"
        android:scaleType="centerCrop"
        android:id="@+id/item_image_background_cidade"
    />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="SÃ£o Paulo"
        android:padding="8dp"
        android:textColor="@color/white"
        android:id="@+id/item_title_cidade_viagem"
        app:layout_constraintStart_toStartOf="@id/item_image_background_cidade"
        app:layout_constraintEnd_toEndOf="@id/item_image_background_cidade"
        app:layout_constraintBottom_toBottomOf="@id/item_image_background_cidade"
        app:layout_constraintTop_toTopOf="@id/item_image_background_cidade"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@android:drawable/screen_background_dark_transparent"
    />

    <View
        android:id="@+id/item_pacote_divisor"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_image_background_cidade"
        android:background="@android:color/holo_orange_dark"
    />

    <TextView
        android:id="@+id/item_texto_dias"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2 Dias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pacote_divisor"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 249,90"
        app:layout_constraintTop_toBottomOf="@id/item_texto_dias"
        app:layout_constraintStart_toStartOf="@id/item_texto_dias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        android:textSize="20sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>